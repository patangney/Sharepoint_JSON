{
    "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
    "elmType": "div",
    "children": [
        {
            "elmType": "span",
            "style": {
                "padding-right": "8px"
            },
            "txtContent": "@currentField.title"
        },
        {
            "elmType": "a",
            "attributes": {
                "iconName": "Mail",
                "class": "sp-field-quickActions",
                "href": {
                    "operator": "+",
                    "operands": [
                        "mailto:",
                        "@currentField.email",
                        "?subject=Risk Register has been updated - see below for details&body=To view the current risk register, please click on the below link.\r\n---\r\n",
                        "@currentField.title",
                        "\r\nClick this link for more info. https://fexco.sharepoint.com/sites/MBSOSandpit/Lists/Risk%20'+'Register%20List%20Testing/AllItems.aspx"
                    ]
                }
            }
        }
    ]
}